:graphite: <%= node.gdash.graphite_url %>
:templatedir: <%= node.gdash.templatedir %>
<% if node.gdash.basic_auth -%>
:username: <%= node.gdash.username %>
:password: <%= node.gdash.password %>
<% end -%>
:options:
  :title: <%= node.gdash.title %>
  :prefix: <%= node.gdash.prefix %>
  :refresh_rate: <%= node.gdash.refresh_rate %>
  :graph_columns: <%= node.gdash.columns %>
  :graph_width: 500
  :graph_height: 250
  :whisper_dir: <%= node.gdash.graphite_whisperdb %>
  :interval_filters:
  <% node.gdash.interval_filters.each do |interval_filter| -%>
    - :label: <%= interval_filter['label'] %>
      :from: <%= interval_filter['from'] %>
    <% if interval_filter['to'] %>
      :to: <%= interval_filter['to'] %>
    <% end %>
  <% end -%>
  :intervals:
  <% node.gdash.intervals.each do |interval| -%>
    - [ "<%= interval[0] %>", "<%= interval[1] %>" ]
  <% end -%>
